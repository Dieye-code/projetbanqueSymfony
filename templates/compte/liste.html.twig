<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			Liste des Comptes Clients
		</title>
		<link rel="stylesheet" href="css/bootstrap.min.css">
		<link rel="stylesheet" href="css/notyf.min.css">
	</head>
	<body>

		{% if ok is defined and ok == 1 %}
			<script src="js/notyf.min.js"></script>
			<script>
				var t = new Notyf({
                duration: 2000,
                position: {
                x: 'right',
                y: 'top'
                }
                });
                t.success("Compte bien Ajoute");
			</script>

		{% endif %}

		<div class="card col-md-10 offset-md-1    mt-5">
			<div class="card-header text-white bg-primary">Liste des Comptes</div>
			<div class="card-body">
				<table class="table table-bordered table-striped">
                    <tr>
                        <th>Id</th>
                        <th>Numero</th>
                        <th>Date de Creation</th>
                        <th>Solde</th>
                        <th>Client</th>
                    </tr>
                    {% for compte in comptes %}
                        <tr>
                            <td> {{ compte.id }} </td>
                            <td> {{ compte.numero }} </td>
                            <td> {{ compte.dateCreate }} </td>
                            <td> {{ compte.solde }} </td>
                            <td> {{ compte.client }} </td>
                        </tr>
                    {% endfor %}
                </table>
			</div>
		</div>
	</body>
</html>
